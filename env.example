# Django Settings - نسخ إلى .env واملأ القيم
# NEVER commit .env! توليد SECRET_KEY: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"

DEBUG=False
SECRET_KEY=REPLACE_WITH_RANDOM_50_CHAR_KEY
SLUG_SIGNING_SALT=your-slug-signing-salt-here
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# عند استخدام HTTPS خلف nginx:
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database - PostgreSQL (مطلوب للإنتاج)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=dwrha_db
DB_USER=postgres
DB_PASSWORD=your-secure-db-password-here
DB_HOST=localhost
DB_PORT=5432

# Email (اختياري)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password-here

# Redis (اختياري - للإنتاج عالي الأداء، إن لم يتوفر يستخدم قاعدة البيانات)
# REDIS_URL=redis://127.0.0.1:6379/1

